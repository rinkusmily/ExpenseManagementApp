<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey"
    tools:context=".activities.TypesofExpenses">


    <LinearLayout

        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@color/darkgrey">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@color/lightblue"
                    android:padding="@dimen/size_10"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_cancel_type"
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="@dimen/size_30"
                        android:gravity="left"
                        android:src="@drawable/ic_close"
                        android:layout_gravity="center"
                        android:textSize="@dimen/size_26"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:textSize="@dimen/size_18"
                        android:textColor="@color/grey2"
                        android:textStyle="bold"
                        android:fontFamily="@font/latoregular"
                        android:layout_marginLeft="@dimen/size_30"
                        android:text="@string/create_caregory"
                        />

                    <ImageView
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:backgroundTint="@color/blue"
                        android:layout_gravity="center"
                        android:background="@drawable/right"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0.9"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/size_20"
                    android:background="@color/color_grey"/>





                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="1"
                                    android:padding="@dimen/size_14"
                                    android:layout_height="wrap_content">



                                    <TextView
                                        android:id="@+id/tetx"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.9"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:fontFamily="@font/latoregular"
                                        android:layout_gravity="center"
                                        android:textSize="13.33dp"
                                        android:textColor="@color/black"
                                        android:layout_marginLeft="@dimen/size_20"
                                        android:text="@string/spending_category"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="1"
                                    android:layout_height="wrap_content">


                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="1dp"
                                        android:layout_weight="0.9"
                                        android:layout_marginLeft="@dimen/size_20"
                                        android:visibility="gone"
                                        android:background="@color/grey"/>

                                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="25dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="@dimen/size_14"
                        android:layout_height="wrap_content">



                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latoregular"
                            android:textSize="@dimen/size_16"
                            android:textColor="@color/grey"
                            android:layout_marginLeft="@dimen/size_20"
                           android:hint="@string/name_catregory"
                            android:textColorHint="@color/black"
                            android:background="@null"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"

                            android:layout_gravity="right"


                            android:background="@color/color_grey"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="@dimen/size_14"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:enabled="false"
                            android:layout_gravity="center"
                            android:textSize="@dimen/size_16"
                            android:fontFamily="@font/latoregular"
                            android:textColor="@color/grey"
                            android:layout_marginLeft="@dimen/size_20"
                            android:text="@string/icon"
                            android:background="@null"

                            />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/hotel"></ImageView>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/next_arrow"
                            android:tint="@color/blue"></ImageView>

                    </LinearLayout>





                </LinearLayout>









            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>