<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey"
    tools:context=".activities.TypesofExpenses">


    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@color/lightllgrey">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@color/lightblue"
                    android:padding="@dimen/size_10"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_cancel_type"
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="@dimen/size_30"
                        android:gravity="left"
                        android:src="@drawable/ic_close"
                        android:layout_gravity="center"
                        android:textSize="@dimen/size_26"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:textSize="@dimen/size_18"
                        android:textColor="@color/grey"
                        android:textStyle="bold"
                        android:fontFamily="@font/latoregular"
                        android:layout_marginLeft="@dimen/size_30"
                        android:text="@string/payment"
                        />

                    <ImageView
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:backgroundTint="@color/blue"
                        android:layout_gravity="center"
                        android:background="@drawable/setttingsone"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0.9"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/size_20"
                    android:background="@color/grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:padding="@dimen/size_14"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:background="@drawable/currency"
                        android:layout_marginLeft="@dimen/size_40"
                        android:backgroundTint="@color/grey"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:fontFamily="@font/latoregular"
                        android:layout_gravity="center"
                        android:textSize="@dimen/size_16"
                        android:textColor="@color/grey"
                        android:layout_marginLeft="@dimen/size_20"
                        android:text="@string/cash"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.1"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/size_40"
                        android:background="@color/offoffwhite"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.9"
                        android:layout_marginLeft="@dimen/size_20"
                        android:background="@color/grey"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:padding="@dimen/size_14"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:gravity="left"
                        android:backgroundTint="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size_40"
                        android:background="@drawable/ic_check"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:fontFamily="@font/latoregular"
                        android:textSize="@dimen/size_16"
                        android:textColor="@color/grey"
                        android:layout_marginLeft="@dimen/size_20"
                        android:text="@string/pay"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.1"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/size_40"
                        android:background="@color/offoffwhite"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.9"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/size_20"
                        android:background="@color/grey"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:padding="@dimen/size_14"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:gravity="left"
                        android:backgroundTint="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size_40"
                        android:background="@drawable/ic_bank"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:textSize="@dimen/size_16"
                        android:fontFamily="@font/latoregular"
                        android:textColor="@color/grey"
                        android:layout_marginLeft="@dimen/size_20"
                        android:text="@string/bank"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.1"
                        android:layout_marginLeft="@dimen/size_40"
                        android:layout_gravity="right"
                        android:background="@color/offoffwhite"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.9"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/size_20"
                        android:background="@color/grey"/>

                </LinearLayout>






            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>