<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white2"
    tools:context=".activities.Register">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_createac"
                android:textSize="@dimen/size_28"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/latoregular"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_20"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/size_40"
                android:layout_marginBottom="@dimen/size_10"
                android:text="@string/Createac" />

            <EditText
                android:id="@+id/edt_nameac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/entername"
                android:background="@drawable/btn_bg"
                android:padding="@dimen/size_10"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginTop="@dimen/size_20"
                android:fontFamily="@font/latoregular"
                android:textColor="@color/lightgrey2"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColorHint="@color/lightgrey2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <EditText
                    android:id="@+id/tv_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/country_code"
                    android:background="@drawable/btn_bg"
                    android:padding="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_marginLeft="@dimen/size_30"
                    android:layout_marginTop="@dimen/size_20"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/lightgrey2"
                    android:inputType="number"
                    android:textColorHint="@color/lightgrey2"
                    android:layout_weight="0.5"
                    android:maxLength="3"
                    />


                <EditText
                    android:id="@+id/edt_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobile_phn_txt"
                    android:background="@drawable/btn_bg"
                    android:padding="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_30"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_20"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/lightgrey2"
                    android:inputType="number"
                    android:textColorHint="@color/lightgrey2"
                    android:layout_weight="1.5"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />


            </LinearLayout>





            <EditText
                android:id="@+id/edt_emailac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enteremail"
                android:background="@drawable/btn_bg"
                android:padding="@dimen/size_10"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginTop="@dimen/size_26"
                android:fontFamily="@font/latoregular"
                android:textColor="@color/lightgrey2"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/lightgrey2"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ellipsize="end"
                />



            <EditText
                android:id="@+id/edt_conemailac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirmemail"
                android:background="@drawable/btn_bg"
                android:padding="@dimen/size_10"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginTop="@dimen/size_26"
                android:fontFamily="@font/latoregular"
                android:textColor="@color/lightgrey2"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/lightgrey2"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ellipsize="end"
                />



            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_currency"
                android:background="@drawable/btn_bg"
                android:padding="@dimen/size_10"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginTop="@dimen/size_26"
                android:drawableRight="@drawable/ic_right"
                android:drawableTint="@color/darkgrey"
                style="@style/mySpinnerItemStyle"
                android:fontFamily="@font/latoregular"
                android:textColor="@color/lightgrey2"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/lightgrey2"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:padding="@dimen/size_10"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginTop="@dimen/size_26">


                <Spinner
                    android:id="@+id/spn_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tooltipText="@string/select_language"
                    style="@style/mySpinnerItemStyle"
                    android:backgroundTint="@color/darkgrey"
                    android:fontFamily="@font/latoregular"

                    />

            </RelativeLayout>


            <EditText
                android:id="@+id/edt_pinac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enterpin"
                android:background="@drawable/btn_bg"
                android:padding="@dimen/size_10"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginTop="@dimen/size_26"
                android:fontFamily="@font/latoregular"
                android:textColor="@color/lightgrey2"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColorHint="@color/lightgrey2"

                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <EditText
                android:id="@+id/edt_conpinac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enterpin"
                android:background="@drawable/btn_bg"
                android:padding="@dimen/size_10"
                android:maxLength="4"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginTop="@dimen/size_26"
                android:fontFamily="@font/latoregular"
                android:textColor="@color/lightgrey2"
                android:inputType="numberPassword"
                android:textColorHint="@color/lightgrey2"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:ellipsize="end"
                />


            <TextView
                android:id="@+id/tv_createac"
                android:textSize="@dimen/size_14"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="@dimen/size_14"
                android:background="@drawable/grey_roundedbg"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_30"
                android:fontFamily="@font/latoregular"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginTop="@dimen/size_30"
                android:textStyle="bold"
                android:text="@string/create"
                />


            <TextView
                android:id="@+id/tv_enterguac"
                android:textSize="@dimen/size_14"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_18"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latoregular"
                android:visibility="gone"
                android:text="@string/enterguest"
                />

            <RelativeLayout
                android:id="@+id/rl_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_24"
                android:layout_marginLeft="@dimen/size_24"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">


                <TextView
                    android:id="@+id/tv_terms1"
                    android:textSize="@dimen/size_14"
                    android:textColor="@color/lightgrey"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latoregular"
                    android:text="@string/bycreateaccount"
                    />
                <TextView
                    android:id="@+id/tv_terms2"
                    android:textSize="@dimen/size_14"
                    android:textColor="@color/lightgrey2"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:fontFamily="@font/latoregular"
                    android:layout_toRightOf="@+id/tv_terms1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_3"
                    android:text="@string/terms"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_44"
                android:layout_marginLeft="@dimen/size_44"
                android:layout_marginTop="@dimen/size_7"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">


                <TextView
                    android:id="@+id/tv_sign1"
                    android:textSize="@dimen/size_14"
                    android:textColor="@color/lightgrey"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/latoregular"
                    android:layout_height="wrap_content"
                    android:text="@string/alreadyacc"
                    />
                <TextView
                    android:id="@+id/tv_sign2"
                    android:textSize="@dimen/size_14"
                    android:textColor="@color/lightgrey2"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:fontFamily="@font/latoregular"
                    android:layout_toRightOf="@+id/tv_sign1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_3"
                    android:text="@string/signin"
                    />


            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>