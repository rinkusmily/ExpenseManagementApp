<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"

  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:layout_marginLeft="@dimen/size_60"
            android:layout_marginRight="@dimen/size_60"
            android:padding="@dimen/size_5"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/logo" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_28"
            android:textSize="@dimen/size_18"
            android:fontFamily="@font/latoregular"
            android:textColor="@color/grey3"
            android:text="@string/splashtext1" />


        <ImageView
            android:id="@+id/loading_icon"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/load_img"/>


        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/size_16"
            android:fontFamily="@font/latoregular"
            android:textColor="@color/blue"
            android:visibility="gone"
            android:text="@string/splashtext2" />


    </LinearLayout>



</RelativeLayout>