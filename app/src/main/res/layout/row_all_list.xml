<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:ignore="MissingDefaultResource">
    <ImageView
        android:id="@+id/type_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:padding="@dimen/size_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/type_icon"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/price_tv"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/latoregular"
            android:text="event date "
            />

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="@dimen/size_16"
            android:textColor="@color/black2"
            android:fontFamily="@font/montserrat_regular_2"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"

            android:maxLines="1"


            android:text="Example of car"
            />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left"
            android:textSize="@dimen/size_10"
            android:maxLines="1"
            android:textColor="@color/grey2"
            android:fontFamily="@font/latoregular"
            android:ellipsize="end"
            android:text="show the plate or VIN number "
            />


    </LinearLayout>

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/size_16"
        android:textColor="@color/grey9"
        android:fontFamily="@font/latoregular"
        android:text="rtrte"
        android:gravity="right"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/size_10"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/size_10"
        android:background="@color/lightgrey"
        android:layout_marginTop="@dimen/size_5"/>


</RelativeLayout>