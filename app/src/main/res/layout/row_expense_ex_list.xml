<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/type_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:tint="@color/black2"
        />
    <LinearLayout

        android:id="@+id/ll_car_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/size_14"
            android:textColor="@color/darkgrey2"
            android:fontFamily="@font/latoregular"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:text="@string/enentdate"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginLeft="@dimen/size_20"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_vehicle_name"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:textSize="@dimen/size_16"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_regular_2"
                android:text="@string/exampleofpayment"
                />

            <TextView
                android:id="@+id/tv_paid_out"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="@dimen/size_16"
                android:textColor="@color/red"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/latoregular"
                android:text="$-5000"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_grey2"
            android:fontFamily="@font/latoregular"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:text="@string/shownnote"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightllgrey"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginTop="@dimen/size_5"/>



</LinearLayout>