<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/type_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img"
        android:layout_margin="10dp"
        >

    </ImageView>

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="10dp"
        >



        <TextView
            android:id="@+id/date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/size_14"
            android:textColor="@color/darkgrey"
            android:fontFamily="@font/latoregular"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:text="@string/enentdate"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginLeft="@dimen/size_20"

            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:textSize="@dimen/size_16"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular_2"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/exampleofpayment"
                />

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="@dimen/size_16"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/latoregular"
                android:text="$5000"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/note_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/size_14"
            android:textColor="@color/color_grey2"
            android:fontFamily="@font/latoregular"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:text="@string/shownnote"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightllgrey"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginTop="@dimen/size_5"/>

</LinearLayout>